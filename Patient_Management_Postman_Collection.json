    {
      "name": "Test Security",
      "item": [
        {
          "name": "Unauthorized Access (No Token)",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/patients",
